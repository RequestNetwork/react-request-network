{
  "name": "@requestnetwork/rnjs-light",
  "version": "0.3.2",
  "description": "A library to create  and pay requests",
  "module": "dist/request-network-lw.esm.js",
  "keywords": [
    "request",
    "network",
    "request-network",
    "javascript",
    "lightweight"
  ],
  "author": "Benjamin Shafii <benjamin.shafii@famoco.com>",
  "homepage": "https://request.network",
  "license": "ISC",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "directories": {
    "src": "src",
    "test": "__tests__"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RequestNetwork/react-request-network.git"
  },
  "scripts": {
    "build": "tsc -p tsconfig.base.json  && rollup -c && rimraf compiled && cp ./index.js ./dist/index.js",
    "format": "prettier --trailing-comma es5 --single-quote --write 'src/**/*' 'test/**/*' 'README.md'",
    "test": "jest"
  },
  "bugs": {
    "url": "https://github.com/RequestNetwork/react-request-network/issues"
  },
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@types/jest": "^23.3.5",
    "@types/node": "^10.11.7",
    "jest": "^23.6.0",
    "jest-cli": "^23.6.0",
    "prettier": "^1.14.3",
    "rollup": "^0.66.4",
    "rollup-plugin-babel": "^4.0.3",
    "rollup-plugin-commonjs": "^9.1.8",
    "rollup-plugin-json": "^3.1.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-replace": "^2.1.0",
    "rollup-plugin-size-snapshot": "^0.7.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-terser": "^3.0.0",
    "rollup-plugin-uglify": "^6.0.0",
    "ts-jest": "^23.10.4",
    "tslint": "^5.11.0",
    "typescript": "^3.1.3"
  },
  "dependencies": {
    "ethereumjs-tx": "^1.3.7",
    "ethers": "^4.0.7",
    "requestnetworkartifacts": "^1.6.0",
    "tslib": "^1.9.3",
    "web3-eth-contract": "^1.0.0-beta.36"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testMatch": [
      "<rootDir>/__tests__/**/?(*.)(spec|test).ts?(x)"
    ],
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  }
}
