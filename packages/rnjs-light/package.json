{
  "name": "@requestnetwork/rnjs-light",
  "version": "0.3.2",
  "description": "A library to create  and pay requests",
  "keywords": [
    "request",
    "network",
    "request-network",
    "javascript",
    "lightweight"
  ],
  "author": "Benjamin Shafii <benjamin.shafii@famoco.com>",
  "homepage": "https://request.network",
  "license": "ISC",
  "main": "lib/rnjs-light.js",
  "directories": {
    "lib": "lib",
    "test": "__tests__"
  },
  "files": [
    "lib"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RequestNetwork/react-request-network.git"
  },
  "scripts": {
    "format": "prettier --trailing-comma es5 --single-quote --write 'src/**/*' 'test/**/*' 'README.md'",
    "test": "jest --env=jsdom"
  },
  "bugs": {
    "url": "https://github.com/RequestNetwork/react-request-network/issues"
  },
  "devDependencies": {
    "@types/jest": "^23.3.5",
    "@types/node": "^10.11.7",
    "jest": "^23.6.0",
    "jest-cli": "^23.6.0",
    "prettier": "^1.14.3",
    "ts-jest": "^23.10.4",
    "tslint": "^5.11.0",
    "typescript": "^3.1.3"
  },
  "dependencies": {
    "ethereumjs-tx": "^1.3.7",
    "requestnetworkartifacts": "^1.6.0",
    "web3-eth-contract": "^1.0.0-beta.36",
    "web3-eth": "^1.0.0-beta.36"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "<rootDir>/__tests__/**/?(*.)(spec|test).ts?(x)"
    ],
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  }
}
